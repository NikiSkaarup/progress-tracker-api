{
  "name": "progress-tracker-api",
  "version": "1.0.50",
  "private": true,
  "type": "module",
  "module": "src/index.js",
  "scripts": {
    "migrate": "bun --bun run ./src/db/migrate.js",
    "generate": "drizzle-kit generate --config=./drizzle.config.js",
    "studio": "bunx --bun drizzle-kit studio --config=./drizzle.config.js",
    "up": "drizzle-kit up --config=./drizzle.config.js",
    "start": "bun run src/index.js",
    "dev": "bun run --watch src/index.js",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "format": "biome format --write .",
    "fmt": "biome format --write ."
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.1.1",
    "@elysiajs/cors": "^1.1.0",
    "drizzle-kit": "^0.23.1",
    "drizzle-orm": "^0.32.1",
    "elysia": "^1.1.4",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "latest",
    "typescript": "^5.5.4"
  },
  "trustedDependencies": ["@biomejs/biome", "esbuild", "es5-ext"]
}
